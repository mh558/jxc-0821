<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.jxc.dao.ReturnListDao">

    <resultMap id="BaseResultMap" type="com.atguigu.jxc.entity.ReturnList">
        <result column="return_list_id" property="returnListId" jdbcType="INTEGER" />
        <result column="return_number" property="returnNumber" jdbcType="VARCHAR" />
        <result column="return_date" property="returnDate" jdbcType="VARCHAR" />
        <result column="amount_paid" property="amountPaid" jdbcType="FLOAT" />
        <result column="amount_payable" property="amountPayable" jdbcType="FLOAT" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="state" property="state" javaType="INTEGER"/>
        <result column="supplier_id" property="supplierId" javaType="INTEGER"/>
        <result column="user_id" property="userId" javaType="INTEGER"/>
    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        select
        return_list_id,
        return_number,
        return_date,
        amount_paid,
        amount_payable,
        remarks,
        state,
        supplier_id,
        user_id
        from
        t_return_list
        <where>
            <if test="returnNumber!=null and returnNumber != ''">
                return_number LIKE CONCAT('%',#{returnNumber},'%')
            </if>
            <if test="supplierId!=null">
                AND supplier_id = #{supplierId}
            </if>
            <if test="state!=null">
                AND  state = #{state}
            </if>
            <if test="sTime!=null and sTime!=''">
                AND return_date &gt;= #{sTime}
            </if>
            <if test="eTime!=null and eTime!=''">
                AND return_date &lt;= #{eTime}
            </if>
        </where>
    </select>

    <delete id="deleteReturnList" parameterType="java.lang.Integer">
        delete from t_return_list where return_list_id = #{returnListId}
    </delete>

    <insert id="saveReturnList" useGeneratedKeys="true" keyProperty="returnListId" parameterType="com.atguigu.jxc.entity.ReturnList">
        INSERT INTO t_return_list
        (return_number, return_date, amount_paid, amount_payable, remarks,state,supplier_id,user_id)
        VALUES
        (#{returnNumber}, #{returnDate}, #{amountPaid},
        #{amountPayable}, #{remarks},#{state},#{supplierId},#{userId})
    </insert>



</mapper>

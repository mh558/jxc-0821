<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.jxc.dao.PurchaseListGoodsDao">

    <resultMap id="BaseResultMap" type="com.atguigu.jxc.entity.PurchaseListGoods">
        <result column="purchase_list_goods_id" property="purchaseListGoodsId" jdbcType="INTEGER" />
        <result column="goods_id" property="goodsId" jdbcType="INTEGER" />
        <result column="goods_code" property="goodsCode" jdbcType="VARCHAR" />
        <result column="goods_name" property="goodsName" jdbcType="VARCHAR" />
        <result column="goods_model" property="goodsModel" jdbcType="VARCHAR" />
        <result column="goods_unit" property="goodsUnit" jdbcType="VARCHAR" />
        <result column="goods_num" property="goodsNum" javaType="INTEGER"/>
        <result column="price" property="price" javaType="FLOAT"/>
        <result column="total" property="total" javaType="FLOAT"/>
        <result column="purchase_list_id" property="purchaseListId" javaType="INTEGER"/>
        <result column="goods_type_id" property="goodsTypeId" javaType="INTEGER"/>
    </resultMap>

    <select id="goodsList" resultMap="BaseResultMap" >
        SELECT
        purchase_list_goods_id,
        goods_id,
        goods_code,
        goods_name,
        goods_model,
        goods_unit,
        goods_num,
        price,
        total,
        purchase_list_id,
        goods_type_id
        from
        t_purchase_list_goods
        <where>
        <if test="purchaseListId!=null">
            purchase_list_id = #{purchaseListId}
        </if>
        </where>
    </select>

    <insert id="save"  parameterType="com.atguigu.jxc.entity.PurchaseListGoods">
        INSERT INTO t_purchase_list_goods
        (purchase_list_goods_id, goods_id, goods_code,
        goods_name, goods_model,goods_unit,goods_num,
        price,total,purchase_list_id,goods_type_id)
        VALUES
        <foreach collection="purchaseListGoodsList" item="purchaseListGood" separator=",">
            (#{purchaseListGood.purchaseListGoodsId}, #{purchaseListGood.goodsId},
             #{purchaseListGood.goodsCode},#{purchaseListGood.goodsName}, #{purchaseListGood.goodsModel},
             #{purchaseListGood.goodsUnit},#{purchaseListGood.goodsNum},#{purchaseListGood.price},
             #{purchaseListGood.total},#{purchaseListGood.purchaseListId},#{purchaseListGood.goodsTypeId})
        </foreach>
    </insert>

    <delete id="deletePurchaseList" parameterType="java.lang.Integer">
        delete from  t_purchase_list_goods where purchase_list_id = #{purchaseListId}
    </delete>

</mapper>
